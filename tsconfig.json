{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "build",
    "sourceMap": true
  },
  "filesGlob": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "files": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
