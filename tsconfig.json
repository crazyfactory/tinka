{
  "compilerOptions": {
    "target": "ES6",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true
  },
  "include": [
    "src/**/*"
  ]
}
