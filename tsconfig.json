{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "build",
        "sourceMap": true
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "!node_modules/**",
        "!jspm_packages/**",
        "!typings/**"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "files": [
        "./src/**/*.ts",
        "./test/**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
